@model IEnumerable<DotNetLab10.Models.BasketItem>

@{
    ViewData["Title"] = "Basket";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    <img src="~/upload/@Url.Content(item.PictureName)" alt="Image" style="height:50px;width:50px;" />
                </td>
                <td>
                    <a asp-action="AddFromBasket" asp-route-id="@item.ArticleId">+</a>
                    <a asp-action="RemoveFromBasket" asp-route-id="@item.ArticleId">-</a>
                </td>

            </tr>
        }
    </tbody>

    <caption>Total = @ViewData["summary"]</caption>

</table>




